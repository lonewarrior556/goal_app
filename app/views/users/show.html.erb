<h1><%=@user.username %> </h1>

<h3>Your Goals</h3>
<ul>
  <% @user.goals.each do |goal| %>
    <% if goal.user_id == current_user.id || !goal.private %>
    <li>
      <a href="<%=goal_url(goal)%>"><%=goal.title %></a>  <%= my_button_to(goal_url(goal),"remove goal", "delete") if current_user.id == goal.user_id %>
    </li>
    <% end %>
  <% end %>


</ul>
<%= my_button_to(new_goal_url,"Add Goal", "get") if current_user.id == @user.id %>
